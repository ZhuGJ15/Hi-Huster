<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>
    <Appenders>
        <!-- 输出到控制台 -->
        <Console name="Console" target="SYSTEM_OUT">
            <!-- 需要记录的级别 -->
            <PatternLayout charset="UTF-8" pattern="%d{yyyy-MM-dd HH:mm:ss,SSS}:%4p %t (%F:%L) - %m%n" />
        </Console>

        <!-- INFO级别日志，输出到文件.按周或者超过100MB分割日志文件 -->
        <RollingFile name="InfoFile" fileName="logs/infoLogs/hi-huster-latest.log"
                     filePattern="logs/infoLogs/hi-huster-%d{yyyy-MM-dd}-%i.log" immediateFlush="true">
            <PatternLayout charset="UTF-8" pattern="%d{yyyy-MM-dd HH:mm:ss,SSS}:%4p %t (%F:%L) - %m%n" />
            <Policies>
                <OnStartupTriggeringPolicy/>
                <!-- 日志每7天滚动一次，这里的时间单位取决于上面 filePattern 的日期精确到哪一位 -->
                <TimeBasedTriggeringPolicy modulate="true" interval="7"/>
                <!-- 日志文件每大于100MB就滚动一次 -->
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
            <!-- 保存日志文件的个数 -->
            <DefaultRolloverStrategy max="24" />
        </RollingFile>

        <!-- ERROR级别日志，输出到文件.按周或者超过100MB分割日志文件 -->
        <RollingFile name="ErrorFile" fileName="logs/errorLogs/hi-huster-error-latest.log"
                     filePattern="logs/errorLogs/hi-huster-error-%d{yyyy-MM-dd}-%i.log" immediateFlush="true">
            <PatternLayout charset="UTF-8" pattern="%d{yyyy-MM-dd HH:mm:ss,SSS}:%4p %t (%F:%L) - %m%n" />
            <Policies>
                <OnStartupTriggeringPolicy/>
                <!-- 日志每7天滚动一次，这里的时间单位取决于上面 filePattern 的日期精确到哪一位 -->
                <TimeBasedTriggeringPolicy modulate="true" interval="15"/>
                <!-- 日志文件每大于100MB就滚动一次 -->
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
            <!-- 保存日志文件的个数 -->
            <DefaultRolloverStrategy max="5" />
            <Filters>
                <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingFile>

        <!-- SQL日志，输出到文件.按周或者超过100MB分割日志文件 -->
        <RollingFile name="SqlFile" fileName="logs/sqlLogs/hi-huster-sql-latest.log"
                     filePattern="logs/sqlLogs/hi-huster-sql-%d{yyyy-MM-dd}-%i.log" immediateFlush="true">
            <PatternLayout charset="UTF-8" pattern="%d{yyyy-MM-dd HH:mm:ss,SSS}:%4p %t (%F:%L) - %m%n" />
            <Policies>
                <OnStartupTriggeringPolicy/>
                <!-- 日志每7天滚动一次，这里的时间单位取决于上面 filePattern 的日期精确到哪一位 -->
                <TimeBasedTriggeringPolicy modulate="true" interval="15"/>
                <!-- 日志文件每大于100MB就滚动一次 -->
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
            <!-- 保存日志文件的个数 -->
            <DefaultRolloverStrategy max="5" />
        </RollingFile>

    </Appenders>

    <Loggers>
        <!-- 全局配置 -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="InfoFile"/>
            <AppenderRef ref="ErrorFile"/>
        </Root>
        <!-- 为sql语句配置特殊的Log级别，方便调试 -->
        <Logger name="com.asherz.hi.dao" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="SqlFile"/>
        </Logger>
    </Loggers>
</Configuration>